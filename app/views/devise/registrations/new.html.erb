<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="mx-auto flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600 text-sm font-bold text-white">RA</div>
    <h2 class="mt-10 text-center text-2xl font-bold tracking-tight text-gray-900">Create an account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: user_registration_path, html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :first_name,
                           autocomplete: "given-name",
                           required: true,
                           class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :last_name,
                           autocomplete: "family-name",
                           required: true,
                           class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :contact_number, "Contact number", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.telephone_field :contact_number,
                                autocomplete: "tel",
                                required: true,
                                placeholder: "+63 9XX XXX XXXX",
                                class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "block text-sm font-medium text-gray-900" %>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>
        <div class="mt-2">
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit "Create account", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500">
      Already have an account?
      <%= link_to "Sign in", new_user_session_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
